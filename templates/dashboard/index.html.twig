{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header text-white {{ is_granted('ROLE_ADMIN') ? 'bg-success' : 'bg-primary' }}">
                    <h2 class="text-center mb-0">
                        {% if is_granted('ROLE_ADMIN') %}
                            ðŸ‘‘ Admin Dashboard
                        {% else %}
                            ðŸ‘¤ User Dashboard
                        {% endif %}
                    </h2>
                </div>
                <div class="card-body text-center py-5">
                    {# EXACT MESSAGES FROM INSTRUCTIONS #}
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="alert alert-success">
                            <h3>You are logged in as Admin. You have full access.</h3>
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <h3>You are logged in as Regular User. Limited access granted.</h3>
                        </div>
                    {% endif %}

                    <div class="mt-4">
                        <p><strong>Username:</strong> {{ app.user.userIdentifier }}</p>
                        <p><strong>Role:</strong> 
                            {% if is_granted('ROLE_ADMIN') %}
                                <span class="badge bg-success">ROLE_ADMIN</span>
                            {% else %}
                                <span class="badge bg-primary">ROLE_USER</span>
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}